{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2019",
      "es2020"],
    "paths": {
      "@promise": ["packages/promise1"]
    },
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types/", "./typings.d.ts"],
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "typeAcquisition": {
    "include": []
  }
}
